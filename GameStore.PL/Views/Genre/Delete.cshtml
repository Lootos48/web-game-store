@using GameStore.PL.Util.Localizers
@using Microsoft.AspNetCore.Mvc.Localization
@model GameStore.PL.DTOs.GenreDTO

@inject IHtmlLocalizer<SharedLocalizer> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Delete"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@SharedLocalizer["Confirm"]</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @(FieldLocalizer.GetLocalizedField(x => x.Name, Model))
        </dd>

        @if (Model.Parent != null)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Parent)
            </dt>
            <dd class = "col-sm-10">
                @(FieldLocalizer.GetLocalizedField(x => x.Name, Model.Parent))
            </dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-danger" />
        <br />
        <a asp-action="Index" class="btn btn-outline-dark">@SharedLocalizer["BackToList"]</a>
    </form>
</div>
